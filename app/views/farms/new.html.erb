<h2>New farm</h2>

<% form_for(@farm) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :farmer %><br />
    <%=  f.collection_select(:farmer_id, @farmers, :id, :name, {:prompt => true}) %>
  </p>

  <p>
    <%= f.label :organic %><br />
    <%= f.check_box :organic %>
  </p>

  <p>
    <!-- Only show the organic certifier selector if the organic check box is checked 
         see jQuery function in layout template -->
		<div id="selector_for_certifier">
	    <%= f.label :organic_certifier %><br />
	    <%=  f.collection_select(:organic_certifier_id, @certifiers, :id, :name, {:prompt => true}) %>
		</div>
  </p>

  <p>
    <%= f.label :latitude %><br />
    <%= f.text_field :latitude %>
  </p>
  <p>
    <%= f.label :longitude %><br />
    <%= f.text_field :longitude %>
  </p>
  <p>
    <%= f.label :altitude %><br />
    <%= f.text_field :altitude %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'List', farms_path %> |
<%= link_to 'Back', :back %>